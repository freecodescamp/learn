ttps:\/\/www.CodeCamp\/wp-json\/wp\/v2\/comments?post=1362"}],"version-history":[{"count":3,"href":"https:\/\/www.CodeCamp\/wp-json\/wp\/v2\/pages\/1362\/revisions"}],"predecessor-version":[{"id":2171,"href":"https:\/\/www.CodeCamp\/wp-json\/wp\/v2\/pages\/1362\/revisions\/2171"}],"up":[{"embeddable":true,"href":"https:\/\/www.CodeCamp\/wp-json\/wp\/v2\/pages\/21"}],"wp:attachment":[{"href":"https:\/\/www.CodeCamp\/wp-json\/wp\/v2\/media?parent=1362"}],"curies":[{"name":"wp","href":"https:\/\/api.w.org\/{rel}","templated":true}]}}